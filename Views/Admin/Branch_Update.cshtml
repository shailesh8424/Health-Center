@using healt_Center.Models;
@{
    ViewData["Title"] = "Branch_Update";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model Branch


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            display: flex;
            flex-direction: row;
            width: 100%;
            max-width: 1200px;
            margin: auto;
            background: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
            padding: 20px;
            box-sizing: border-box;
            gap: 20px;
            flex-wrap: wrap;
        }

        .card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            padding: 20px;
            box-sizing: border-box;
            flex: 1;
            min-width: 300px;
        }

        .card h2 {
            margin-top: 0;
        }

        .card input[type="text"],
        .card input[type="number"],
        .card input[type="email"],
        .card textarea {
            width: calc(100% - 22px);
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .card textarea {
            height: 100px;
            resize: vertical;
        }

        .card b {
            display: block;
            margin-bottom: 5px;
        }

        .card button {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .card button:hover {
            background-color: #555;
        }

        
    </style>
</head>
<body>
    <form method="post">
        

        @if(Model !=null)
        {
    <div class="container">
        <div class="card">
            <h2>Contact Info</h2>
            <input type="hidden" name="Branch_Id" value="@Model.Branch_Id"></input>
            <b>Description</b>
            <textarea name="Branch_Description" placeholder=" Enter Description detail...">@Model.Branch_Description</textarea>
            <b>Phone</b>
            <input type="number" placeholder="Enter Phone Number..." name="Branch_number" value="@Model.Branch_number"/>
            <b>Email</b>
            <input type="email" placeholder="Enter Email Id..."  name="Branch_email" value="@Model.Branch_email"/>
        </div>

        <div class="card">
            <h2>Opening Hours</h2>
            <b>Monday-Friday</b>
            <input type="text"  name="Branch_mon_fri" placeholder="Enter time range (e.g., 9:00 AM - 5:00 PM)" value="@Model.Branch_mon_fri" />
            <b>Saturday</b>
            <input type="text" placeholder="Enter time range (e.g., 9:00 AM - 5:00 PM)" name="Branch_Saturday" value="@Model.Branch_Saturday" />
            <b>Sunday</b>
            <input type="text" placeholder="Enter time..." name="Branch_sunday" value="@Model.Branch_sunday" />
        </div>

        <div class="card">
            <h2>Social Media Links</h2>
            <b>Facebook Link</b>
            <input type="text" name="Branch_facebook" value="@Model.Branch_facebook" placeholder="https://www.facebook.com/yourprofile" />
            <b>Twitter Link</b>
            <input type="text" name="Branch_twitter" value="@Model.Branch_twitter" placeholder="https://www.twitter.com/yourprofile" />
            <b>Instagram Link</b>
            <input type="text" name="Branch_instagram" value="=@Model.Branch_instagram" placeholder="https://www.instagram.com/yourprofile" />
            <b>Branch Logo</b>
            <input type="file" name="Branch_Logo" value="@Model.Branch_Logo" />

        </div>

        <div class="card" style="flex-basis: 100%; text-align: center;">
            <button type="submit">Submit</button>
        </div>
    </div>
     }
    </form>
</body>
</html>
