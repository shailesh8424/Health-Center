@using healt_Center.Models 
@{
    ViewData["Title"] = "Admin_Profile_Update";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model admin





    <div class="card p-3  container" style="width:100%">
            <form method="post" enctype="multipart/form-data" >
            @if(Model != null)
            {
              <input type="hidden" name="Id" value="@Model.Id"/>
               <input type="text" class="form-control my-3" name="admin_name" value="@Model.admin_name"   placeholder="Enter your Name...">

             
            <input type="email" class="form-control my-3" name="admin_email" value="@Model.admin_email" placeholder="Enter your Email...">
           
            <input type="password" class="form-control my-3" name="admin_Password" value="@Model.admin_Password" placeholder="Enter your Password..."> 
             <input type="file" class="form-control my-3" name="admin_profile" id="admin_profile" onchange="previewImage(event)" accept="image/*" value="@Model.admin_profile">
            @*  <img src="" width="100px;"></img>  *@
             

            <input type="submit" value="Update" class="btn btn-success">
          }
        </form>
         <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
</div>