@using healt_Center.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Doctor>


<!-- TEAM -->
<style>
    .fixed-size-img {
    height: 500px;
   
}
</style>

<section id="team" data-stellar-background-ratio="1">
    <div class="container">
        <div class="row">

            <div class="col-md-6 col-sm-6">
                <div class="about-info">
                    <h2 class="wow fadeInUp" data-wow-delay="0.1s">Our Doctors</h2>
                </div>
            </div>

            <div class="clearfix"></div>
            @if (Model != null)
            {
                @foreach (var data in Model)
                {

                    <div class="col-md-4 col-sm-6">
    <div class="team-thumb wow fadeInUp" data-wow-delay="0.2s">
                            <img src="@("/Dr_pic/"+data.doctor_profile)" class="img-responsive fixed-size-img" alt="">

        <div class="team-info">
            <h3>@data.doctor_name</h3>
            <p>@data.doctor_gender</p>
            <p><i class="fa fa-envelope-o"></i> <a href="#">@data.doctor_email</a></p>
        </div>
        <ul class="social-icon">
            <li><a href="@data.doctor_linkedin_profile" class="fa fa-linkedin-square" target="_blank"></a></li>
            @* <li><a href="@data.doctor_email" class="fa fa-envelope-o"></a></li> *@
            <li><a href="mailto:@data.doctor_email" class="fa fa-envelope-o"></a></li>
        </ul>
    </div>
</div>

                                           
                }
            }
        </div>
    </div>
</section>


            
     <!-- MAKE AN APPOINTMENT -->
     <section id="appointment" data-stellar-background-ratio="3">
          <div class="container">
               <div class="row">

                    <div class="col-md-6 col-sm-6">
                         <img src="images/appointment-image.jpg" class="img-responsive" alt="">
                    </div>

                    <div class="col-md-6 col-sm-6">
                         <!-- CONTACT FORM HERE -->
                         <form id="appointment-form" role="form" method="post" action="#">

                              <!-- SECTION TITLE -->
                              <div class="section-title wow fadeInUp" data-wow-delay="0.4s">
                                   <h2>Make an appointment</h2>
                              </div>

                              <div class="wow fadeInUp" data-wow-delay="0.8s">
                                   <div class="col-md-6 col-sm-6">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" id="name" name="name"  placeholder="Full Name" required>
                                   </div>

                                   <div class="col-md-6 col-sm-6">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required placeholder="Your Email">
                                   </div>

                                   <div class="col-md-6 col-sm-6">
                                        <label for="date">Select Date</label>
                                        <input type="datetime-local" name="date" Value="ToString("MM/dd/yyyy")" required class="form-control">
                                   </div>

                                   <div class="col-md-6 col-sm-6">
                                        <label for="select">Select Department</label>
                                        <select class="form-control" required name="Department">
                                     <option selected disabled >---Select Department---</option>
                                     <option>Dentist</option>
                                     <option>Audiologists</option>
                                     <option>Cardiologists</option>
                                     <option>Psychiatrists</option>
                                     

                                   
                                
                                            
                                        </select>
                                   </div>

                                   <div class="col-md-12 col-sm-12">
                                        <label for="telephone">Phone Number</label>
                                        <input type="tel" class="form-control" id="phone" name="phone" required placeholder="Phone">
                                        <label for="Message">Additional Message</label>
                                        <textarea class="form-control" rows="5" id="message" name="message"  placeholder="Message"></textarea>
                                        <button type="submit" class="form-control" id="cf-submit" name="submit">Submit Button</button>
                                   </div>
                              </div>
                        </form>
                    </div>

               </div>
          </div>
     </section>


